variables:
  env:
    value: "sit"
    description: "Enter the environment name: apollo-ne-hotfix/apollo-ne-hotfixdr/preprod/preproddr/uat/sit"
stages:
    - weekly-reports
    - notify
JOB - sre-weekly-metrics-reports:
  stage: weekly-reports
  script:
    - |
      set +x    
      cd ${CI_PROJECT_DIR}/
      python3 weekly-audit.py "$env"
      
  when: manual
  tags: 
    - mda-dd-server-sre-automation
JOB - NOTIFY - Send mail notification:
  stage: notify
  script:
    - |
      set +x
      ansible-playbook -vvv ${CI_PROJECT_DIR}/ansible/SendReportsMail.yaml 
  when: on_success
  tags: 
    - mda-dd-server-sre-automation

